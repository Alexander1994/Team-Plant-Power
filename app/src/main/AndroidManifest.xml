<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamplantpower.team_plant_power">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.teamplantpower.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamplantpower.activities.TemperatureDisplay"
            android:parentActivityName="com.teamplantpower.activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamplantpower.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.teamplantpower.activities.LightDisplay"
            android:parentActivityName="com.teamplantpower.activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamplantpower.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.teamplantpower.activities.HumidityDisplay"
            android:parentActivityName="com.teamplantpower.activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamplantpower.activities.MainActivity" />
        </activity>
        <activity android:name="com.teamplantpower.activities.MessageBoardActivity"></activity>
        <activity
            android:name="com.teamplantpower.activities.HistoricalTemperature"
            android:parentActivityName="com.teamplantpower.activities.TemperatureDisplay">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamplantpower.activities.TemperatureDisplay" />
        </activity>
        <activity
            android:name="com.teamplantpower.activities.HistoricalLight"
            android:parentActivityName="com.teamplantpower.activities.LightDisplay">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamplantpower.activities.LightDisplay" />
        </activity>

        <activity
            android:name="com.teamplantpower.activities.HistoricalHumidity"
            android:parentActivityName="com.teamplantpower.activities.HumidityDisplay">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamplantpower.activities.HumidityDisplay" />
        </activity>
    </application>
</manifest>